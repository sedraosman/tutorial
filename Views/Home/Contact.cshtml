@model ContactU
<body class="sub_page">

  
<section class="contact_section layout_padding">
    <div class="design-box">
        <img src="images/design-2.png" alt="">
    </div>
    <div class="container ">
        <div class="">
            <h2 class="">
                Contact Us
            </h2>
        </div>

    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                    <form asp-action="SaveContact">
                    <div>
                        <input type="text" asp-for ="Name"   placeholder="Name" />
                    </div>
                    <div>
                        <input type="email" asp-for ="Email"   placeholder="Email" />
                    </div>
                    <div>
                        <input type="text" asp-for ="Phone" placeholder="Phone" />
                    </div>
                    <div>
                        <input type="text" asp-for ="Message"class="message-box" placeholder="Message" />
                    </div>
                    <div class="d-flex ">
                        <button>
                            SEND
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="map_container">
                    <div class="map-responsive">
                        <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&q=Eiffel+Tower+Paris+France" width="600" height="300" frameborder="0" style="border:0; width: 100%; height:100%" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="container-fluid footer_section">
    <p>
        &copy; <span id="displayYear"></span> All Rights Reserved By
        <a href="https://html.design/">SEDRA OSMAN</a>
    </p>
</section>

<script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="js/bootstrap.js"></script>
<script type="text/javascript" src="js/custom.js"></script>
</body>

</html>




